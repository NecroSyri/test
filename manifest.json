{
  "name": "Test",
  "description": "Just a test",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "16":"img/ico/16-b.png",
    "48":"img/ico/48-b.png",
    "128": "img/ico/128-b.png"
  },
  "browser_action": {
    "default_icon": "img/ico/16-w.png",
    "default_title":"Test",
    "default_popup": "pages/popup.html"
  },
  "commands": {
    "toggle-popin": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Show or hide"
    }
  },
  "background": {
    "page": "pages/background.html",
    "matches": [ "http://*/*", "https://*/*"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ]
}
